<%-include ("./partials/header.ejs") %>
<%- include ("./partials/homenavbar")%>

<body>
<div class="container">
    <hr>
    <div class="jumbotron">
        <h1 class="display-4">Bem vindo</h1>
        <p class="lead">Este é o nosso Blog.</p>
        <hr class="my-4">
        <p>Descrição detalhada.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="" role="button">Leia mais</a>
        </p>
    </div>
    <% articles.forEach(article =>{%>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title%></h2>

            </div>
            <div class="card-body">
                <a href="/<%= article.slug%>" class="btn btn-primary">Ler Artigo</a>
            </div>
        </div><br>
    <%})%>
    <a href="/articles/page/2">Ver mais artigos >>></a>
</div>
</body>

