<%-include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar")%>

<body>
<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a href="/admin/users/create" class="btn btn-primary">Criar novo usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbudy>
            <% users.forEach(user => {%>
                <tr>
                    <th><%= user.id%></th>
                    <th><%= user.name%></th>
                    <th><%= user.email%></th>
                    <th>
                        <a href="/admin/articles/edit/<%= user.id%>" class="btn btn-warning">Editar</a>

                        <form method="post" action="/admin/article/delete" style="display: inline"
                              onsubmit="deleteConfirm(event, this)">
                            <input type="hidden" name="id" value="<%= user.id%>">
                            <button class="btn btn-danger" >Deletar</button>
                        </form>
                    </th>
                </tr>
            <%})%>
        </tbudy>
    </table>
</div>
</body>

