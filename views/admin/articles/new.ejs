<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar')%>
<div class="container">
    <br>
    <form method="post" action="/articles/save">
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">

                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo"><br>
                <textarea name="body" id="article" class="form-control" placeholder="Escreva o artigo aqui!"></textarea><br>
                <label>Categoria</label>
                <select name="category" id="" class="form-control">
                    <% categories.forEach((category)=>{%>
                        <option value="<%= category.id%>"><%= category.title%></option>
                    <%})%>

                </select><br>
                <button class="btn btn-primary">Cadastrar</button>
            </div>
        </div>

    </form>

</div>

<%- include ('../../partials/footer')%>
<script>
    tinymce.init({
        selector:"#article",
        language:"pt_BR",
        branding: false,
        plugins:[
            'advlist',
            'autolink',
            'link',
            'image',
            'lists',
            'preview',
            'searchreplace',
            'wordcount',
            'fullscreen',
            'insertdatetime',
            'media',
            'save',
            'table',
            'emoticons',
        ]
    })

</script>